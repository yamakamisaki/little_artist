<%= form_with model: [@item,@comment] , class: :comment__form do |f| %>

    <%= render 'shared/error_messages', model: f.object %> 

   <div class="comment__field">
       <%= f.text_field :text, class: :post__comment, placeholder: 'コメントを入力する' %>
       <br>
       <%= f.submit "コメントする", class: :comment__btn %>
   </div>
<% end %>
