<div class="topver"></div>

<div class="main">
  <div class="main-contents login">
   <div class="form__wrapper">
   
      <div class="form__top">
       新規登録
      </div>


<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field">
        <div class="field__flex">
            <%= f.label :name, "ユーザー名（10文字以内）" %>
            <div class="need">必須</div><br />
        </div>
        <%= f.text_field :name %>
      </div>

      <div class="field">
        <%= f.label :profile, "プロフィール"%><br />
        <%= f.text_area :profile, class: :form__text, id:"user_profile",
         placeholder: "例
１歳の娘がいます。
最近クレヨン遊びにハマっていて
部屋中がキャンバスになっています！！" %>
      </div>

      <div class="field">
      <div class="field__flex">
            <%= f.label :email, "メールアドレス" %>
            <div class="need"> 必須 </div><br />
        </div>
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>

      <div class="field">
      <div class="field__flex">
            <%= f.label :password , "パスワード（6文字以上）" %>
            <div class="need">必須</div><br />
        </div>
        <%= f.password_field :password , id:"user_password", autocomplete: "new-password" %>
      </div>

      <div class="field">
      <div class="field__flex">
            <%= f.label :password_confirmation, "パスワード再入力" %>
            <div class="need">必須</div><br />
        </div>
        <%= f.password_field :password_confirmation, id:"user_password_confirmation", autocomplete: "new-password" %>
      </div>

      <div class="actions">
        <%= f.submit "新規登録", class: :form__btn  %>
      </div>
<% end %>



   </div>
  </div>
</div>